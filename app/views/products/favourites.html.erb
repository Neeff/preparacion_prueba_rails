<div class="row">
  <div class="col col-md-8">
    <table class="table table-hover">
     <tr>
       <th>Name</th>
       <th>Price</th>
       <th>Description</th>
       <th>Image</th>
     </tr>
     <% @product.each do |product|%>
     <tr>
       <td><%= product.name %></td>
       <td><%= product.price %></td>
       <td><%= product.description %></td>
       <td><%= image_tag product.image, width: '100px'%></td>

      </tr>
      <% end %>
    </table>

  </div>
